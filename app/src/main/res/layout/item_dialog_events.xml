<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_events_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nuevo título"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_events_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva descripción"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_events_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva dirección"/>
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_dialog_events_date_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/calendar"
            android:layout_marginTop="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextBlack">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/item_dialog_events_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nueva fecha"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_dialog_events_time_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/clock"
            android:layout_marginTop="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/EditTextBlack">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/item_dialog_events_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nueva hora"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


</LinearLayout>
