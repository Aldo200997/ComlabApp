<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_projects_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nuevo título"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_projects_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva descripción"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextBlack">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_dialog_projects_documentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nuevo link de documentación"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>