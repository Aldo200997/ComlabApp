<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_events_card"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <ImageView
                android:id="@+id/item_events_image"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="20dp"
                android:layout_gravity="bottom|end"
                android:gravity="right"
                android:layout_marginBottom="18dp">

                <CheckBox
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:button="@drawable/selector_like_new"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/share" />

            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/item_events_title"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Titulo del evento"
                    android:textSize="20sp"
                    android:maxLength="30"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/marker"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_events_km"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="4 km"
                    android:maxLength="15"/>
            </LinearLayout>

            <RatingBar
                android:id="@+id/item_events_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/item_events_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon candiles, Polanco, CDMX"
                android:maxLength="30"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/item_events_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris blandit vel nulla non posuere. Nam sed rutrum eros, ut mollis nulla. Phasellus et purus ac velit finibus lobortis in non nulla. Curabitur luctus dolor nisi, at cursus tortor maximus id. Donec rhoncus eros vitae eros interdum, placerat pulvinar tellus fascinante al cine"
                android:textSize="12sp"
                android:maxLength="450"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>


            <View style="@style/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/calendar"/>

                <TextView
                    android:id="@+id/item_events_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 de septiembre del 2017"
                    android:maxLength="30"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/clock"/>

                <TextView
                    android:id="@+id/item_events_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:00 hrs"
                    android:maxLength="15"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:paddingTop="8dp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>